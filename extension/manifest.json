{
  "manifest_version": 3,
  "name": "WebDefender",
  "version": "0.2",
  "description": "Detect phishing websites using ONNX AI.",
  "permissions": ["scripting", "storage", "activeTab"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/jquery-3.1.1.min.js",
        "config/features_config.js",
        "features/url_features.js",
        "features/content_features.js",
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "libs/ort.min.js",
        "../models/phishing_model.onnx",
        "config/features_config.js",
        "features/url_features.js",
        "features/content_features.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "action": {
    "default_popup": "./popup/popup.html"
  }
}
