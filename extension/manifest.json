{
    "manifest_version": 3,
    "name": "WebDefender - Scam & Phishing Detector",
    "version": "1.0.0",
    "description": "Analyzes websites for potential phishing and scam indicators and generates security reports",
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
      }
    },
    "permissions": [
      "activeTab",
      "storage",
      "webNavigation",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background/background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content/content.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  }